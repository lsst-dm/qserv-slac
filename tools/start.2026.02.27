      -v ${QSERV_BASE_DIR}/worker/etc/group:/etc/group:ro \
      -v ${QSERV_BASE_DIR}/worker/config:/config-etc:ro \
      -v ${QSERV_BASE_DIR}/worker/var-run-xrootd:/var/run/xrootd \
      -v ${QSERV_BASE_DIR}/worker/data/mysql:/qserv/data/mysql:ro \
